<!-- /views/posts/show.ejs -->
<% include ../partials/navbar %>

    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>
            <%= post.title %>
        </title>
    </head>

    <body>
        <h1>
            <%= post.title %>
        </h1>
        <p>
            <%= post.content %>
        </p>
        <p>Author: <%= post.author.username %>
        </p>
        <p>Genre: <%= post.genre %>
        </p>
        <p>Private: <%= post.isPrivate ? "Yes" : "No" %>
        </p>
        <p>Created at: <%= post.createdAt.toDateString() %>
        </p>
        <p>Last updated: <%= post.updatedAt.toDateString() %>
        </p>
        <% if (post.author._id.toString()===session.user._id) { %>
            <a href="/posts/<%= post._id %>/edit">Edit</a>
            <form action="/posts/<%= post._id %>?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit">Delete</button>
            </form>
            <% } %>
                <br>
                <a href="/posts">Back to Posts</a>
    </body>

    </html>